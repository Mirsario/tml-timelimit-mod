<Project Sdk="Microsoft.NET.Sdk">

	<Import Project="..\tModLoader.targets" />

	<PropertyGroup>
		<AssemblyName>TimeLimit</AssemblyName>
		<TargetFramework>net6.0</TargetFramework>
		<PlatformTarget>AnyCPU</PlatformTarget>
		<LangVersion>latest</LangVersion>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="NetSerializer" Version="4.1.2" />
	</ItemGroup>

	<ItemGroup>
		<LocalizationFiles Include="Localization\*.hjson" />

		<Compile Remove="lib\**" />
		<EmbeddedResource Remove="lib\**" />
		<None Remove="lib\**" />
		<None Remove="**/*.png" />
		<None Remove="**/*.ogg" />
		<None Remove="**/*.ase" />
		<None Remove="**/*.pdn" />
		<None Remove=".gitignore" />
		<None Remove="build.txt" />
		<None Remove="description.txt" />
	</ItemGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DocumentationFile>HamstarHelpers.xml</DocumentationFile>
	</PropertyGroup>

</Project>